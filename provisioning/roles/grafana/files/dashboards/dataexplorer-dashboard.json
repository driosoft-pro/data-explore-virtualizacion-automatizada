{
  "title": "DataExplorer - Nginx / Node / Prometheus",
  "schemaVersion": 36,
  "version": 1,
  "timezone": "browser",
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU Usage (%)",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0, "max": 100 },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[2m])) * 100)"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "RAM Usage (%)",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0, "max": 100 },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "((node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes) * 100"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Load Average (1 / 5 / 15)",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": { "unit": "none" },
        "overrides": []
      },
      "targets": [
        { "refId": "A", "expr": "node_load1" },
        { "refId": "B", "expr": "node_load5" },
        { "refId": "C", "expr": "node_load15" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Tr√°fico de Red (RX/TX Bytes/s)",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "fieldConfig": {
        "defaults": { "unit": "Bps" },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (instance) (rate(node_network_receive_bytes_total[1m]))"
        },
        {
          "refId": "B",
          "expr": "sum by (instance) (rate(node_network_transmit_bytes_total[1m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latencia HTTP Nginx (probe_duration_seconds)",
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 8 },
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "probe_duration_seconds"
        }
      ]
    }
  ]
}
